{
    "name": "GCP Cloud SDK",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "vscode",

    "features": {
        "ghcr.io/devcontainers-extra/features/uv:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/terraform:1": {
            "installTFsec": true,
            "installTerraformDocs": true,
            "version": "latest",
            "tflint": "latest",
            "terragrunt": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff"
            ]
        }
    }
}